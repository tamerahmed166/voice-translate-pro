# Voice Translator Pro - Environment Configuration
# إعدادات البيئة لمترجم الصوت الذكي

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys (Add your actual API keys here)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
MICROSOFT_TRANSLATE_API_KEY=your_microsoft_translate_api_key
DEEPL_API_KEY=your_deepl_api_key
OPENAI_API_KEY=your_openai_api_key

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/voice-translator-pro
REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Translation Services
DEFAULT_SOURCE_LANG=auto
DEFAULT_TARGET_LANG=en
SUPPORTED_LANGUAGES=ar,en,fr,es,de,it,pt,ru,zh,ja,ko,hi

# Security
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

